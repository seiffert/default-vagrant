[shelf]

listen = <%= @fpmsocketpath %>/<%= @vhost %><%= @domain %>.phpfpm.socket
user = vagrant
group = users
pm = static
pm.max_children = 1
request_slowlog_timeout = 1
slowlog = <%= @vhostpath + "/" + @vhost + "." + @domain + "/app/logs/php_slow.log" %>
php_value[memory_limit] = 600M
php_value[post_max_size] = 600M
php_value[upload_max_filesize] = 600M
php_value[max_file_uploads] = 300
php_flag[magic_quotes_gpc] = off
php_flag[xdebug.remote_enable] = on
php_value[xdebug.remote_handler] = dbgp
php_value[xdebug.remote_host] = <%= @ip %>
php_value[xdebug.remote_log] = <%= @vhostpath + "/" + @vhost + "." + @domain + "/app/logs/xdebug.log" %>
php_value[xdebug.remote_mode] = req
php_value[xdebug.remote_port] = 9000
php_value[date.timezone] = <%= @timezone %>
